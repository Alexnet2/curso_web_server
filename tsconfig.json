{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/@types", "node_modules"],
        "types": ["./src/@types"],
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"],
            "@errors": ["errors"],
            "@controllers": ["controllers"],
            "@routes": ["routes"]
        }
    }
}
